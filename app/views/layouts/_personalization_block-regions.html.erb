<% content_for :icon, flush: true do %>
  <svg class="personalization_block__icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 65 65">
    <circle class="personalization_block__icon-part" cx="33.5" cy="24.5" r="10"/>
    <path class="personalization_block__icon-part" d="M12.5,24.71c0,18.68,21,36.79,21,36.79s21-18.11,21-36.79a21,21,0,1,0-42,0Z"/>
  </svg>
<% end %>

<%= render layout: "layouts/personalization_block", locals: { title: "välj dina områden" } do %>
  <select class="personalization_block__select personalization_block__select--counties">
    <% counties_options = ['VÄLJ REGION…'].concat(counties.sort {|x,y| x.name <=> y.name }.map { |county| [county.name, county.id] }) %>
    <%= options_for_select(counties_options) %>
  </select>

  <select class="personalization_block__select personalization_block__select--municipalities">
    <% municipalities_options = ['VÄLJ KOMMUN…'].concat(municipalities.sort {|x,y| x.name <=> y.name }.map { |municipality| [municipality.name, municipality.id, { 'data-parent' => municipality.parent_id }] }) %>
    <%= options_for_select(municipalities_options) %>
  </select>
<% end %>
